<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="900.0" prefHeight="600.0">

    <!-- Main horizontal container -->
    <HBox prefWidth="900.0" prefHeight="600.0">

        <!-- Left section (Login Form) -->
        <VBox prefWidth="450.0" prefHeight="600.0" alignment="CENTER" spacing="20.0"
              style="-fx-background-color: #FFFFFF; -fx-padding: 40;">
            <!-- Title -->
            <Label text="LOGIN"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <!-- Subtitle/Description -->
            <Label text="How to get started lorem ipsum dolor at?"
                   wrapText="true"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666; -fx-padding: 0 40 0 40;" />

            <!-- Username Field -->
            <TextField promptText="Username"
                       style="-fx-pref-width: 300;" />

            <!-- Password Field -->
            <PasswordField promptText="Password"
                           style="-fx-pref-width: 300;" />

            <!-- Login Button -->
            <Button text="Login Now"
                    style="-fx-font-size: 14px; -fx-pref-width: 300; -fx-background-color: #6200EE; -fx-text-fill: white;"/>

            <!-- "Login with Others" Label -->
            <Label text="Login with Others"
                   style="-fx-font-size: 12px; -fx-text-fill: #999999;" />

            <!-- Social Login Buttons -->
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Login with Google"
                        style="-fx-background-color: #4285F4; -fx-text-fill: white; -fx-pref-width: 140;" />
                <Button text="Login with Facebook"
                        style="-fx-background-color: #4267B2; -fx-text-fill: white; -fx-pref-width: 140;" />
            </HBox>
        </VBox>

        <!-- Right section (Illustration/Background) -->
        <VBox prefWidth="450.0" prefHeight="600.0" alignment="CENTER"
              style="-fx-background-color: linear-gradient(to bottom right, #845EC2, #D65DB1);">

            <!-- Example image (replace the URL or use a local resource) -->
            <ImageView fitWidth="200.0" preserveRatio="true">
                <image>
                    <!-- Replace with your own image path or resource -->
                    <Image url="@../assets/logo.png" />
                </image>
            </ImageView>
        </VBox>
    </HBox>
</AnchorPane>
