<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ewaste.Controllers.FormDemandeController"
      style="-fx-padding: 20; -fx-background-color: #F8F9FA;">

    <Label text="Formulaire de Demande" style="-fx-font-size: 18px; -fx-text-fill: #2C3E50; -fx-font-weight: bold;"/>

    <VBox spacing="2">
        <TextField fx:id="adresseField" promptText="Adresse"/>
        <Label fx:id="adresseError" textFill="red" visible="false"/>
    </VBox>

    <VBox spacing="2">
        <TextField fx:id="emailField" promptText="Email Utilisateur"/>
        <Label fx:id="emailError" textFill="red" visible="false"/>
    </VBox>

    <VBox spacing="2">
        <TextField fx:id="messageField" promptText="Message"/>
        <Label fx:id="messageError" textFill="red" visible="false"/>
    </VBox>

    <VBox spacing="2">
        <ComboBox fx:id="typeField">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Demande"/>
                    <String fx:value="Reclamation"/>

                </FXCollections>
            </items>
        </ComboBox>
        <Label fx:id="typeError" textFill="red" visible="false"/>
    </VBox>

    <Button fx:id="saveButton" text="Envoyer" onAction="#handleSubmit"
            style="-fx-background-color: #2980B9; -fx-text-fill: white;"/>
</VBox>
