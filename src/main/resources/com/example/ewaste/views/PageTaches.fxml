<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ewaste.Controllers.ControllerPageTaches">

   <stylesheets>
      <URL value="@../styles/Taches.css" />
   </stylesheets>

   <children>
      <Label layoutX="277.0" layoutY="38.0" styleClass="table-title" text="Liste des tâches :">
         <font>
            <Font name="Consolas" size="18.0" />
         </font>
      </Label>

      <TextField fx:id="searchField" layoutX="277.0" layoutY="98.0" prefHeight="38.0" prefWidth="302.0" promptText="Rechercher une tâche..." styleClass="text-field" />
      <Button fx:id="searchButton" layoutX="557.0" layoutY="97.0" styleClass="button" text="🔍" />

      <TableView fx:id="tableTaches" layoutX="277.0" layoutY="155.0" prefHeight="413.0" prefWidth="722.0" styleClass="table-view">
         <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" styleClass="table-column" text="ID" />
            <TableColumn fx:id="colEmploye" prefWidth="150.0" styleClass="table-column" text="Nom Employé" />
            <TableColumn fx:id="colMessage" prefWidth="150.0" styleClass="table-column" text="Message" />
            <TableColumn fx:id="colLatitude" prefWidth="100.0" styleClass="table-column" text="Altitude" />
            <TableColumn fx:id="colLongitude" prefWidth="100.0" styleClass="table-column" text="Longitude" />
            <TableColumn fx:id="colEtat" prefWidth="150.0" styleClass="table-column" text="État" />
         </columns>
      </TableView>

      <Label layoutX="1031.0" layoutY="205.0" text="Message :">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Label>
      <Label layoutX="1035.0" layoutY="281.0" text="Altitude :">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Label>
      <Label layoutX="1027.0" layoutY="357.0" text="Longitude :">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Label>

      <TextField fx:id="fieldMessage" layoutX="1027.0" layoutY="234.0" promptText="Indiquer un message" />
      <TextField fx:id="fieldLatitude" layoutX="1027.0" layoutY="311.0" promptText="Donner l'altitude" />
      <TextField fx:id="fieldLongitude" layoutX="1027.0" layoutY="388.0" promptText="Donner la longitude" />

      <Label layoutX="1025.0" layoutY="117.0" text="Employé :">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Label>
      
      <Button fx:id="btnAjouter" layoutX="1031.0" layoutY="523.0" mnemonicParsing="false" onAction="#ajouterTache" text="Ajouter" />
      <Button fx:id="btnModifier" layoutX="1179.0" layoutY="523.0" mnemonicParsing="false" onAction="#modifierTache" text="Modifier" />
      <Label layoutX="1031.0" layoutY="433.0" text="Etat :">
         <font>
            <Font name="Consolas" size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnSupprimer" layoutX="740.0" layoutY="97.0" mnemonicParsing="false" onAction="#supprimerTache" text="Supprimer" />
      <Button layoutX="867.0" layoutY="97.0" mnemonicParsing="false" onAction="#ouvrirPlannification" text="Plannification" />
      <ComboBox fx:id="comboEtat" layoutX="1027.0" layoutY="463.0" prefWidth="150.0" promptText="Selectionner l'etat" />
      <ComboBox fx:id="comboEmploye" layoutX="1027.0" layoutY="155.0" prefWidth="150.0" promptText="Selectionner un employé" />
   </children>
</AnchorPane>
