<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ewaste.Controllers.Modifier_Poubelle"
            prefHeight="500.0" prefWidth="800.0"
            stylesheets="@../styles/style.css">

    <VBox spacing="20" alignment="CENTER" prefWidth="800" prefHeight="500" styleClass="container">
        <Label text="Modifier la Poubelle" styleClass="header-title"/>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="ID Centre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="idCentreField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="adresseField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- Niveau -->
            <Label text="Niveau (%):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Slider fx:id="niveauSlider" GridPane.rowIndex="3" GridPane.columnIndex="1" min="0" max="100"/>
            <ProgressBar fx:id="niveauProgressBar" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <!--Hauteur-->
            <Label text="Hauteur totale (cm):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="hauteurTotaleField" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>
            <Label text="Ã‰tat:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="etatComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Date d'Installation:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <DatePicker fx:id="dateInstallationPicker"
                        editable="false"
                        disable="true"
                        style="-fx-opacity: 1;"/>        </GridPane>


        <Button text="Modifier"
                onAction="#handleConfirm"
                styleClass="btn-modifier"/>
    </VBox>

</AnchorPane>