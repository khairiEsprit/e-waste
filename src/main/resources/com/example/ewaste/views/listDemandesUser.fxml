<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@../styles/tache.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ewaste.contollers.ListeDemandeUserController">

    <HBox spacing="20" styleClass="root" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>



        <!-- Main Content -->
        <VBox spacing="20" style="-fx-padding: 0 0 0 20;" HBox.hgrow="ALWAYS">
            <Label styleClass="main-title" text="Liste des Demandes" />



            <!-- Main Container with Requests & Info Card -->
            <HBox spacing="20" HBox.hgrow="ALWAYS">
                <!-- Request List -->
                <ScrollPane fitToWidth="true" prefHeight="531.0" prefWidth="562.0" styleClass="scroll-pane" HBox.hgrow="ALWAYS">
                    <GridPane fx:id="gridPane" hgap="20" styleClass="grid-pane" vgap="20">
                        <!-- Requests will be loaded dynamically here -->
                    </GridPane>
                </ScrollPane>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
