<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="1200.0" styleClass="parent" stylesheets="@../styles/sign-up.css"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.ewaste.controllers.MainLoginSignUpController">
    <children>
        <Pane layoutX="2.0" layoutY="140.0" prefHeight="490.0" prefWidth="1200.0" styleClass="pane">
            <children>
                <!-- Sign Up Section -->
                <Label layoutX="30.0" layoutY="98.0"
                       text="New to EcoCycle?"
                       textFill="WHITE"
                       styleClass="smart-title">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Label layoutX="30.0" layoutY="134.0" prefHeight="64.0" prefWidth="300.0"
                       text="Join the smart waste management revolution. Transform waste into valuable resources and power a sustainable future."
                       textFill="WHITE" wrapText="true"
                       styleClass="smart-description">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Button layoutX="30.0" layoutY="200.0" mnemonicParsing="false" onAction="#open_signup" prefHeight="32.0" prefWidth="93.0" styleClass="trans-btn-white-border" text="Sign Up" />

                <!-- Sign In Section -->
                <Label layoutX="729.0" layoutY="53.0"
                       text="Already a Member?"
                       textFill="WHITE"
                       styleClass="smart-title">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Label layoutX="729.0" layoutY="83.0" prefHeight="64.0" prefWidth="300.0"
                       text="Log in to optimize your recycling efforts and track your environmental impact with our innovative platform."
                       textFill="WHITE" wrapText="true"
                       styleClass="smart-description">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Button layoutX="729.0" layoutY="166.0" mnemonicParsing="false" onAction="#open_signin" prefHeight="32.0" prefWidth="93.0" styleClass="trans-btn-white-border" text="Sign In" />

                <!-- Content container for transitions -->
                <VBox id="vbox" fx:id="vbox" layoutX="21.0" layoutY="-49.0" prefHeight="480.0" prefWidth="480.0" styleClass="white-pane" />
            </children>
        </Pane>
    </children>
</AnchorPane>
