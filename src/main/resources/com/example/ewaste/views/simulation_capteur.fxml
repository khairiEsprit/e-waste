<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ewaste.Controllers.SimulationCapteurControllers"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <!-- Titre -->
        <Label text="Simulation du Capteur de Distance" styleClass="title-label">
            <font>
                <Font size="20"/>
            </font>
        </Label>

        <!-- ID de la Poubelle -->
        <Label fx:id="labelIdPoubelle" text="ID Poubelle : " styleClass="info-label"/>

        <!-- Distance Mesurée -->
        <Label fx:id="labelDistance" text="Distance Mesurée : " styleClass="info-label"/>

        <!-- Niveau de Remplissage -->
        <Label text="Niveau de Remplissage : " styleClass="info-label"/>
        <ProgressBar fx:id="progressBarRemplissage" progress="0" prefWidth="300" styleClass="progress-bar"/>

        <!-- Pourcentage de Remplissage -->
        <Label fx:id="labelPourcentage" text="0%" styleClass="percentage-label"/>

        <!-- Bouton pour Vider la Poubelle -->
        <Button text="Vider la Poubelle" onAction="#viderPoubelle" styleClass="button"/>
    </VBox>

    <!-- Styles -->
    <stylesheets>
        <URL value="@../styles/style.css"/>
    </stylesheets>
</AnchorPane>