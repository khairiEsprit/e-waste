<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ewaste.contollers.mainController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/tache.css"
            styleClass="border-pane">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER" styleClass="top-nav">
            <Button text="Demande" onAction="#showDemande" styleClass="nav-button"/>
            <Button text="Consulter" onAction="#show" styleClass="nav-button"/>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <!-- Default "Accueil" Title -->
            <Label fx:id="welcomeTitle" text="Accueil" styleClass="welcome-title"/>
        </StackPane>
    </center>

</BorderPane>