<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ewaste.contollers.mainController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../styles/tache.css"
            styleClass="border-pane">

    <top>
        <HBox spacing="20" styleClass="hbox">
            <Button text="Demande" onAction="#showDemande" styleClass="button"/>
            <Button text="Consulter" onAction="#show" styleClass="button"/>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>

</BorderPane>
